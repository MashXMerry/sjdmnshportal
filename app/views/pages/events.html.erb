  blockquote {
    border-left: 5px solid #4e2706;
  }

  .pagination li.active {
    width: 30px;
    background-color: #bf360c;
    color: white;
    padding-top: 5px;
  }

  .pagination li {
    padding-top: 5px;
    margin-left: 10px;
  }
