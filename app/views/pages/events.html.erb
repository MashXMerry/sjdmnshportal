<%= javascript_include_tag 'style' %>

<%= render 'partials/navbar' %>
<%= render 'partials/slider' %>
<!-- ============================================================= -->

<div class="container">
  <div class="row">
    <div class="col s12">
      <p class="title">
        <blockquote style="font-family:Rockwell;font-size: 50px">School Events :</blockquote>
      </p><hr>
    </div>
  </div>
</div>

<% @events.each do |event| %>
  <% if event.image_file_name.present? %>
    <div class="container">
      <div class="row">
        <div class="col l2">
          <% if event.date.blank? %>
          <% else %>
            <p  class="center" style="font-size: 40px;font-family:Rockwell">
              <b><%= event.date.strftime('%b') %><br>
              <%= event.date.strftime('%d') %></b>
              </p>
          <% end %>
        </div><!-- col l2 -->
        <div class="col l5 m12">
          <%= image_tag event.image.url(:medium) , style:"width:100%;height: 300px;" , class:"materialboxed" %>
        </div><!-- col l5 -->
        <div class="col l5">
          <p style="font-size: 25px;margin: 10px;font-family:Rockwell" class="title">
           Title: <%= event.title %>
         </p>
          <b style="font-size: 15px">Posted at <%= event.created_at.to_s(:long) %></b><hr>
          <p><%= truncate(event.body , length:100) %></p>
          <a class="btn btn-flat deep-orange darken-4 hoverable white-text waves-light modal-trigger" href="#modalA<%= event.id %>">Read More</a>
        </div><!-- col l5 -->

        <div id="modalA<%= event.id %>" class="modal modal-fixed-footer">
          <div class="modal-content">
            <p style="font-size: 30px;margin: 0px;font-family:Rockwell" class="title">
             <% if event.date.blank? %>
             <% else %>
               When: <%= event.date %><br>
             <% end %>
             Title: <%= event.title %>
             <p style="font-size: 15px">Posted at <%= event.created_at.to_s(:long) %></p><hr>
           </p>
            <p style="text-align: justify;" class="body"><%= event.body %></p>
          </div>
          <div class="modal-footer">
            <a class="modal-action modal-close waves-effect waves-green btn-flat ">Close</a>
          </div>
        </div><!-- modal -->
      </div><!-- row -->
      <hr>
    </div><!-- container -->
  <% else %>
    <div class="container">
      <div class="row">
        <div class="col s12">
           <p style="font-size: 25px;margin: 10px;font-family:Rockwell" class="title center">
              <% if event.date.blank? %>
              <% else %>
                When: <%= event.date.to_s(:long) %><br>
              <% end %>
             Title: <%= event.title %>
           </p>
           <p style="font-size: 15px" class="center">Posted at <%= event.created_at.to_s(:long) %></p>
           <p class="center"><%= truncate(event.body , length:200) %></p>
           <center>
             <a class="btn btn-sm btn-flat deep-orange darken-4 hoverable white-text waves-light modal-trigger" href="#modalA<%= event.id %>">
              Read More
             </a>
           </center>
             
        </div>

        <div id="modalA<%= event.id %>" class="modal modal-fixed-footer">
          <div class="modal-content">
            <p style="font-size: 30px;margin: 0px;font-family:Rockwell" class="title">
             <% if event.date.blank? %>
             <% else %>
               When: <%= event.date %><br>
             <% end %>
             Title: <%= event.title %>
             <p style="font-size: 15px">Posted at <%= event.created_at.to_s(:long) %></p><hr>
           </p>
            <p style="text-align: justify;" class="body"><%= event.body %></p>
          </div>
          <div class="modal-footer">
            <a class="modal-action modal-close waves-effect waves-green btn-flat ">Close</a>
          </div>
        </div><!-- modal -->
      </div>
    <hr>
    </div>
  <% end %><!-- if event.image_file_name.exist -->
    
<% end %><!-- @event.each -->

<center>
  <%= will_paginate @events , renderer: MaterializePagination::Rails %>
</center>



<%= render 'partials/footer' %>

