<%= javascript_include_tag 'style' %>
<div class="row" style="background-color: #e8e8e8">
    <nav class="orange darken-4">
      <div class="nav-wrapper">
        <a class="brand-logo right" style="padding-right: 20px">Student list</a>
        <a href="#" data-activates="slide-out" class="button-collapse">
          <i class="fa fa-bars fa-2x" aria-hidden="true"></i>
        </a>
      </div>
    </nav>

    <div class="row" style="margin-top: 50px;">
      <div class="col s12 m12 l9 right">
        <a class="waves-effect waves-light btn modal-trigger" href="#modal1">Search student</a>
        <div id="modal1" class="modal">
          <%= form_tag admin_student_list_path , :method => 'get' do %>
            <div class="modal-content">
              <h4>Search student</h4>
              <div class="input-field" style="padding-top: 10px">
                <i class="material-icons prefix">create</i>
                <label>Enter student LRN</label>
                <%= text_field_tag :search , params[:search] %>
              </div>
            </div>
            <div class="modal-footer">
              <%= submit_tag "Search" , class:"left btn btn-flat green waves-effect waves-blue white-text" %>
              <a class="modal-action modal-close waves-effect waves-yellow btn-flat red white-text">close</a>
            </div>
          <% end %>  
        </div>
        <hr>

        <table class="striped responsive-table centered">
          <thead>
            <tr>
              <th>*</th>
              <th>LRN</th>
              <th>Firstname</th>
              <th>Middlename</th>
              <th>Lastname</th>
              <th>Email</th>
              <th>Section</th>
              <th>Level</th>
              <th>Gender</th>
            </tr>
          </thead>
          <tbody>
            <% @students.each do |student| %>
              <tr>
                <td><%= link_to "Edit", edit_student_path(student.id) %></td>
                <td><%= link_to student.lrn , student_path(student.id) %></td>
                <td><%= link_to student.lastname , student_path(student.id) %></td>
                <td><%= link_to  student.firstname , student_path(student.id) %></td>
                <td><%= link_to  student.middlename , student_path(student.id) %></td>
                <td><%= student.email %></td>
                <td><%= student.section %></td>
                <td><%= student.level %></td>
                <td><%= student.gender %></td>
              </tr>
            <% end %> 
          </tbody>
        </table>
      </div>
    </div>



  <div class="col s12 ">
      <%= render 'partials/sidebar' %>
  </div>
</div>
  
<style type="text/css">
  body {
    background-color: #e8e8e8;
  }
  .modal.bottom-sheet {
    max-height: 100%!important;
  }

  .modal .modal-footer {
    height: 80px!important;
  }

  .collapsible-body {
    padding: 3.5px!important;
  }
