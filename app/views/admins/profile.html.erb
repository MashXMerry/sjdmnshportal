<%= javascript_include_tag 'style' %>
<div class="row" style="background-color: #e8e8e8">
  <div class="">
    <nav class="orange darken-4">
      <div class="nav-wrapper">
        <a class="brand-logo right" style="padding-right: 20px">Account setting</a>
        <a href="#" data-activates="slide-out" class="button-collapse">
          <i class="fa fa-bars fa-2x" aria-hidden="true"></i>
        </a>
      </div>
    </nav>
     
  <div class="row" style="padding-top: 20px">
    <div class="col s12 m12 l9 right">
      <% @admin.each do |admin| %>
        <div class="card-panel grey lighten-5 z-depth-1">
          <div class="row">
            <div class="col s12 m2 l2">
              <%= image_tag "avatar.jpg" , class:"circle" , style:"width:100px" %>
            </div>
            <div class="col s12 m10 l10">
              <% if admin.middlename.blank? %>
                <p>
                  <b class="name">
                    <%= admin.firstname + ' ' + admin.lastname %> (<%= admin.role %>)
                  </b><br>
                  <%= admin.email %> 
                </p>
              <% else %>
                <p>
                  <b class="name"><%= admin.firstname + " " + admin.middlename + " " + admin.lastname %> (<%= admin.role %>)</b><br>
                  <%= admin.email %> 
                </p>
                <%= link_to "Account Settings" , edit_administrator_registration_path %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div><!-- row -->
  </div>

  <div class="col s12 ">
    <%= render 'partials/sidebar' %>
  </div>
</div>
  

<style type="text/css">
  .name {
    font-size: 30px;
  }
</style>

