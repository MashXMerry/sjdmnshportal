<%= javascript_include_tag 'style' %>
<div class="row" style="background-color: #e8e8e8;">
  <div class="">
    <nav style="background-color: #640000">
      <div class="nav-wrapper">
        <a class="brand-logo right" style="padding-right: 20px">Student list - <%= @section %></a>
        <a href="#" data-activates="slide-out" class="button-collapse">
          <i class="fa fa-bars fa-2x" aria-hidden="true"></i>
        </a>
      </div>
    </nav>
    
    <div class="col s12 m12 l9 right main-body center" style="margin-top: 40px">
    	<div class="row">
        <% if @students.exists? %>
          <% @students.each do |student| %>
            <div class="col l3 m4 s12">
              <div class="card">
                <div class="card-image">
                  <%= image_tag "avatar.jpg" , style:"width:100%" %>
                </div>
                <div class="card-content">
                  <p><%= student.firstname + " " + student.lastname %></p>
                </div>
                <div class="card-action">
                  <a target="_blank" href='/admin/students/<%= student.lrn %>' class="green-text">View student</a>
                </div>
              </div>
            </div>
          <% end %>
        <% else %>
        <div style="margin-top: 50px;">
          <center>
            <%= image_tag "favicon.ico" , style: "width:10%" %>
          </center>
          <h3>No students yet</h3>
        </div>
        <% end %>	
    	</div>

      <div style="border-top: .5px solid #bababa;margin-top: 50px">
        <center>
          <%= will_paginate @students , renderer: MaterializePagination::Rails %>
        </center>  
      </div>

    </div>

  </div>
  <div class="col s12 ">
      <%= render 'partials/sidebar' %>
  </div>
</div>

<style type="text/css">
  .pagination li.active {
    width: 30px;
    background-color: #bf360c;
    color: white;
    padding-top: 5px;
  }

  .pagination li {
    padding-top: 5px;
    margin-left: 10px;
  }

  .title {
    font-size: 30px;
  }

  .date {
    font-size: 30px;
  }

  td {
    background-color: white;
    border-right: 1px solid #cbcbcb;
    border-left: 1px solid #cbcbcb;  
  }

  .main-body {
    border:1px solid gray;
    margin: 5px 5px;
    padding: 10px 10px;
    border-radius: 5px;
  }
</style>