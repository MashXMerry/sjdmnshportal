<%= form_with(model: news, local: true) do |form| %>
  <% if news.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(news.errors.count, "error") %> prohibited this news from being saved:</h2>

      <ul>
      <% news.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="card white">
    <div class="card-content black-text">
      <span class="card-title center"><b>Edit news</b></span><br>
      <div class="row">
        <div class="input-field col s12">
          <i class="material-icons prefix">create</i>
          <label class="active">Title:</label>
          <%= form.text_field :title, id: :news_title %>
        </div>
        <div class="input-field col s12">
          <i class="material-icons prefix">create</i>
          <label class="active">Content:</label>
          <%= form.text_area :body, id: :news_body , class:"materialize-textarea" %>
        </div>
      </div>
    </div>
    <div class="card-action">
      <%= form.submit "Update" , class:"btn green" , data: { disable_with: "Updating news .." } %>
      <%= link_to 'Back', news_index_path , class:"btn btn-blue right" %>
    </div>
  </div>

  
<% end %>
