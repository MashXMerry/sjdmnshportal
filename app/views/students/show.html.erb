  }

  .tabs-ko {
    border: 1px solid gray;
    margin-top: 10px;
    border-radius: 10px 10px 0px 0px;
  }

  .grade-header {
    background-color: #9f4551;
    padding: 10px;
    margin: 10px;
    border-radius: 10px;
    color: white;
    font-size: 20px;
  }

  .modal.bottom-sheet {
    max-height: 100%!important;
  }

  .student-list {
    border:1px solid #9e9e9e;
    padding:20px;
    border-radius: 20px;
    margin-top: 20px;
  }
  .title {
      font-size: 30px;
    }

    @media (max-width: 575px) { 
       .modal.open{
          width: 100%;
          max-height: 100%;
          height: 100%;
          top: 0 !important;
        }
        .modal-content {
          height: calc(100% - 56px);
        }
    }
  /*// Small devices (landscape phones, 576px and up)*/
    @media (min-width: 576px) and (max-width: 767px) {  
