<%= javascript_include_tag 'style' %>
<div class="row" style="background-color: #e8e8e8;">
  <div class="">
    <nav style="background-color: #640000">
      <div class="nav-wrapper">
        <a class="brand-logo right" style="padding-right: 20px">Subjects</a>
        <a href="#" data-activates="slide-out" class="button-collapse">
          <i class="fa fa-bars fa-2x" aria-hidden="true"></i>
        </a>
      </div>
    </nav>
    
    <div class="row" style="margin-top: 50px">
      <div class="col s12 m12 l9 right">
        <%= form_for(@subject , remote: true ) do |f| %>
           <div class="card white">
              <div class="card-content black-text">
                <span class="card-title">Add Subjects</span>
                <div class="input-field">
                  <i class="material-icons prefix">create</i>
                  <label>Subject Title</label>
                  <%= f.text_field :title , id:'title' %>
                </div>
                <div class="input-field">
                  <i class="material-icons prefix">create</i>
                  <%= f.select :yearlvl , options_for_select([["Year"],"7" , "8" ,"9" ,"10" ,"11" ,"12"]) ,id:"year" %>
                </div>
                <div class="input-field">
                  <i class="material-icons prefix">create</i>
                  <label>Subject Description</label>
                  <%= f.text_field :description , id:'desc' %>
                </div>
              </div>
              <div class="card-action">
                <%= f.submit "Add subject" , class:"btn btn-flat green waves-effect waves-blue white-text" %>
              </div>
          </div>
        <% end %>
      </div>
    </div>


  </div>
  <div class="col s12 ">
      <%= render 'partials/sidebar' %>
  </div>
</div>
  



<style type="text/css">
  .title {
  font-size: 30px;
}

.date {
  font-size: 30px;
}
</style>