<%= javascript_include_tag 'style' %>
<div class="row" style="background-color: #e8e8e8;">
  <div class="">
    <nav style="background-color: #640000">
      <div class="nav-wrapper">
        <a class="brand-logo right" style="padding-right: 20px">Subject list</a>
        <a href="#" data-activates="slide-out" class="button-collapse">
          <i class="fa fa-bars fa-2x" aria-hidden="true"></i>
        </a>
      </div>
    </nav>
    
    <div class="row" style="margin-top: 30px;">
      <div class="col s12 m12 l9 right">
        <ul class="collection with-header">
          <li class="collection-header"><h4>Subject list</h4></li>
          <% @subjects.each do |subject| %>
            <li class="collection-item" id="subject<%= subject.id %>">
              <div><b><%= subject.title %></b> | Grade <%= subject.yearlvl %> | <%= subject.description %>
                <%= link_to edit_subject_path(subject.id) , class:"secondary-content green-text" do %>
                  <i class="material-icons">create</i>
                <% end %>
                <%= link_to subject_path(subject.id) , class:"secondary-content red-text" , method: :delete , remote: true , data: { confirm: 'Are you sure ?' } do %>
                  <i class="material-icons">delete</i>
                <% end %>
              </div>
            </li>
          <% end %>
        </ul>
      </div>
    </div>

  </div>
  <div class="col s12 ">
      <%= render 'partials/sidebar' %>
  </div>
</div>
  



<style type="text/css">
  .title {
  font-size: 30px;
}

.date {
  font-size: 30px;
}
</style>